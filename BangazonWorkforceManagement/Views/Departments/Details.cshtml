@model BangazonWorkforceManagement.ViewModels.DepartmentDetailViewModel


@{
    ViewData["Title"] = "Details";
}

<h2>Department Details</h2>

<div>
    <h3>@Html.DisplayFor(model => model.Department.Name)</h3>
    <hr />
    <dl class="dl-horizontal">
]
        <dd>
            @Html.DisplayFor(model => model.Department.Employee)
        </dd>
        <dd>
            @foreach (var x in Model.EmployeeList)
            {
                { <p>EmployeeId: @x.EmployeeId, @x.FirstName, @x.LastName</p><br />}
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Department.DepartmentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
